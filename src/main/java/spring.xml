<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "tangle" class = "org.spring.concepts.Triangle">
  <property name="pointA" ref="ZeroPoint"></property>
  <property name="pointB" ref="Point2"></property>
  <property name="pointC" ref="Point3"></property>
     
   </bean>
   <bean id ="ZeroPoint" class ="org.spring.concepts.Point">
   <property name="x" value ="0" />
   <property name="y" value ="0" />
   </bean>
   
  
   <bean id ="Point2" class ="org.spring.concepts.Point">
   <property name="x" value ="-20" />
   <property name="y" value ="0" />
   </bean>
   
   <bean id ="Point3" class ="org.spring.concepts.Point">
   <property name="x" value ="020" />
   <property name="y" value ="0" />
   </bean>

</beans>